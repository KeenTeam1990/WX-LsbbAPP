.centers {
        display: flex;
        align-items: flex-start;
}

.right {
        border-left: 1rpx solid #f5f5f5;
        height: 490rpx;
        overflow: auto;
        border-bottom: 1rpx solid #f5f5f5;
}

.left {
        border-right: 1rpx solid #f5f5f5;
}

.subclass {
        flex: 1;
        display: flex;
        flex-wrap: wrap;
}

.subclass text {
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 80rpx;
        font-size: 32rpx;
        color: #636363;
        border-bottom: 2rpx solid #f5f5f5;
}

.subclass .active {
        background: #fafafa;
        color: #577eff;
}
