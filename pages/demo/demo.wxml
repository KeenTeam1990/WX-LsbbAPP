<view class='demo'>
        <picker-view indicator-style="height: 50px;" style="width: 100%; height: 150rpx;" value="{{valueArr}}" bindchange="bindChange">
                <picker-view-column>
                <view wx:for="{{province}}" wx:key="{{index}}" style="line-height: 50px">{{item+index}}</view>
                </picker-view-column>
                <picker-view-column>
                <view wx:for="{{city}}"  wx:key="{{index}}" style="line-height: 50px">{{item+index}}</view>
                </picker-view-column>
                <picker-view-column>
                <view wx:for="{{area}}"  wx:key="{{index}}" style="line-height: 50px">{{item}}</view>
                </picker-view-column>
        </picker-view>
</view>
